<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutConst"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:visibility="gone"
    android:background="@drawable/background_for_list_item_box">

    <LinearLayout
        android:id="@+id/linearLayoutConst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate_codeConst"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="GPA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate_nameConst"
            android:maxWidth="200dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="U.K Funt Sterling"/>

    </LinearLayout>

    <EditText
        android:id="@+id/etxtValueConst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:hint="Enter value"
        android:layout_marginRight="10dp"
        android:padding="15dp"
        android:textAlignment="textEnd"
        android:background="@null"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_centerVertical="true"/>

</RelativeLayout>